{
  "version": 2,
  "name": "unusual-whales-scanner",
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "UNUSUAL_WHALES_API_KEY": "@unusual_whales_api_key",
    "REDIS_ENABLED": "false",
    "DATABASE_ENABLED": "false"
  },
  "regions": ["iad1"],
  "functions": {
    "api/*.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
